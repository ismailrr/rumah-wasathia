@model MvcRWV2.Models.Buku

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("List","Buku")" class="inline title-admin-page">Buku</a>
        <div type="button" class="btn btn-primary">
            <a asp-action="Create">Buat Baru</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="col-md-9">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Edit Buku</h3>
                    <div class="pull-right box-tools">
                        <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body pad">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Judul" class="control-label"></label>
                        <input asp-for="Judul" class="form-control" />
                        <span asp-validation-for="Judul" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-10">
                        <label asp-for="PenulisBuku" class="control-label"></label>
                        <input asp-for="PenulisBuku" class="form-control" />
                        <span asp-validation-for="PenulisBuku" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="Terbitan" class="control-label"></label>
                        <input asp-for="Terbitan" class="form-control" />
                        <span asp-validation-for="Terbitan" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-10">
                        <label asp-for="ISBN" class="control-label"></label>
                        <input asp-for="ISBN" class="form-control" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="Tebal" class="control-label"></label>
                        <input asp-for="Tebal" class="form-control" />
                        <span asp-validation-for="Tebal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Deskripsi" class="control-label"></label>
                        <textarea asp-for="Deskripsi" class="form-control" id="editor1" rows="10" cols="80">
                            Pertanyaan
                        </textarea>
                        <span asp-validation-for="Deskripsi" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-3">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Publish</h3>
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body pad">
                        <div class="form-group">
                            <span class="pull-right">
                                <input type="submit" value="Simpan" class="btn btn-default" />
                                <a asp-action="List" class="btn btn-info" role="button">Kembali</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Tag</h3>
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body pad">
                        <div class="form-group">
                            <select class="form-control" id="sel2" asp-for="Tag">
                                <option value="null"></option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                            <span asp-validation-for="Tag" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Kategori</h3>
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body pad">
                        <div class="form-group">
                            <select class="form-control" id="sel1" asp-for="Kategori">
                                <option value="null"></option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                            <span asp-validation-for="Kategori" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Gambar Cover</h3>
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body pad">
                        <div class="form-group">
                            <span>Pilih Gambar Cover</span>
                            <div class="form-group">
                                <label for="file">Upload file:</label>
                                <input type="file" name="file" id="file" />
                                <span asp-validation-for="FImage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </form>
    <!-- /.col-->
</div>
<!-- ./row -->