@model MvcRWV2.Models.Buku

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Konfirmasi Hapus</h2>
<div class="row">
    <div class="col-md-16">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Hapus File ?</h3>
                <div class="pull-right box-tools">
                    <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body pad">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Judul)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Judul)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.PenulisBuku)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PenulisBuku)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Terbitan)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Terbitan)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ISBN)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ISBN)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Deskripsi)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Deskripsi)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Tebal)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Tebal)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Tanggal)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Tanggal)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="List" asp-route-status="2">Kembali</a>
                </form>
            </div>
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col-->
</div>
<!-- ./row -->
