@model MvcRWV2.Models.KonsultasiEPaper

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("List","KonsultasiEPaper")" class="inline title-admin-page">Konsultasi E Paper</a>
        <div type="button" class="btn btn-primary">
            <a asp-action="Create">Buat Baru</a>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="col-md-9">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Edit Konsultasi E Paper</h3>
                    <div class="pull-right box-tools">
                        <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body pad">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Status" />
                    <input type="hidden" asp-for="Tag" />
                    <input type="hidden" asp-for="Kategori" />
                    <input type="hidden" asp-for="Penulis" />
                    <input type="hidden" asp-for="DriveId" />
                    <input type="hidden" asp-for="Path" />
                    <input type="hidden" asp-for="FImage" />
                    <input type="hidden" asp-for="Source" />
                    <div class="form-group">
                        <label asp-for="Judul" class="control-label"></label>
                        <input asp-for="Judul" class="form-control" />
                        <span asp-validation-for="Judul" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Source" class="control-label"></label>
                        <input asp-for="Source" class="form-control" disabled />
                        <span asp-validation-for="Source" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!-- /.box -->
            <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Konten</h3>
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body pad">
                        <div class="form-group">
                            @if (@Model.FImage != null && @Model.FImage != "")
                            {
                                <img class="preview-edit" src="@Model.FImage" alt="" />
                            }
                            else
                            {
                                <span>Pilih Gambar Cover</span>
                                <div class="form-group">
                                    <label asp-for="FImage" class="control-label"></label>
                                    <input asp-for="FImage" class="form-control" />
                                    <span asp-validation-for="FImage" class="text-danger"></span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- /.box -->
        </div>
        <div class="col-md-3">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Publish</h3>
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body pad">
                        <p>
                            <i class="fa fa-info-circle"></i> Status: @if (@Model.Status == 1)
                            {<strong>dipublish</strong>}
                            else
                            {<strong>tidak dipublish</strong>}
                        </p>
                        <p><i class="fa fa-calendar-alt"></i> Di Publish Pada: <strong>@Model.Tanggal.Date</strong></p>
                        <hr>
                        <div class="form-group">
                            <a asp-action="Trash" asp-route-id="@Model.Id" style="color:darkred;">Pindah ke Trash</a>
                            <span class="pull-right">
                                <input type="submit" value="Simpan" class="btn btn-default" />
                                <a href="@Model.Source" target="_blank" class="btn btn-primary" role="button">Lihat</a>
                                <a asp-action="List" class="btn btn-info" role="button">Kembali</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Tag</h3>
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body pad">
                        <div class="form-group">
                            <select class="form-control" id="sel2" asp-for="Tag">
                                <option value="null"></option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                            <span asp-validation-for="Tag" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Kategori</h3>
                        <div class="pull-right box-tools">
                            <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body pad">
                        <div class="form-group">
                            <select class="form-control" id="sel1" asp-for="Kategori">
                                <option value="null"></option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                            <span asp-validation-for="Kategori" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- /.col-->
</div>
<!-- ./row -->